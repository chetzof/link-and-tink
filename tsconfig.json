{
//  "extends": "chetzof-lint-config/tsconfig/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "importHelpers": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "ts-node": {
    "esm": true,
    "require": ["tsconfig-paths/register"],
    "logError": true
  }
}
